#include <app_main.h>
#include <rgb.h>

static Input button_1 = { BUTTON_1_GPIO_Port, BUTTON_1_Pin };
static Input button_2 = { BUTTON_2_GPIO_Port, BUTTON_2_Pin };
static Input button_3 = { BUTTON_3_GPIO_Port, BUTTON_3_Pin };

static Output left_red   = { LEFT_RED_GPIO_Port,   LEFT_RED_Pin   };
static Output left_green = { LEFT_GREEN_GPIO_Port, LEFT_GREEN_Pin };
static Output left_blue  = { LEFT_BLUE_GPIO_Port,  LEFT_BLUE_Pin  };

static Output right_red   = { RIGHT_RED_GPIO_Port,   RIGHT_RED_Pin   };
static Output right_green = { RIGHT_GREEN_GPIO_Port, RIGHT_GREEN_Pin };
static Output right_blue  = { RIGHT_BLUE_GPIO_Port,  RIGHT_BLUE_Pin  };

void app_init(void)
{

}

void app_loop(void)
{
	update(&button_1);
	update(&button_2);
	update(&button_3);

	if(is_pressed(&button_1)) toggle(&left_red  );
	if(is_pressed(&button_2)) toggle(&left_green);
	if(is_pressed(&button_3)) toggle(&left_blue );

	if(is_released(&button_1)) toggle(&right_red  );
	if(is_released(&button_2)) toggle(&right_green);
	if(is_released(&button_3)) toggle(&right_blue );
}
