#ifndef INC_INPUT_H_
#define INC_INPUT_H_

#include <common_include.h>
#include <callback.h>

#define MAX_DEVICE 5

typedef enum {
	HELD,
	NOT_HELD,
	PRESSED,
	RELEASED,
	MAX_EVENT
} InputEvent;

CLASS (Input) {
	void (* tick)(Input*);
	void (* set_callback)(Input*, void*, CallbackFunction, InputEvent);
};

PRIVATE (Input) {
	Input public;

	GPIO_TypeDef* port;
	uint16_t      pin;
	bool          last_state;
	bool          state;

	Callback callback[MAX_EVENT];
	InputEvent event[MAX_EVENT];
	uint8_t total_event;
};

Input* new_Input(GPIO_TypeDef*, uint16_t);

#endif /* INC_INPUT_H_ */
