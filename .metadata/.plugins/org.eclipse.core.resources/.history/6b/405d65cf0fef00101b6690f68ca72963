void operate_rgb(Output* output, InputEvent event)
{
	switch(event)
	{
	case EVENT_ON:
		return;
	case EVENT_RISING:
		toggle_output(output);
		return;
	case EVENT_FALLING:
		toggle_output(output);
		return;
	default:
		return;
	}
}
