#ifndef INC_OUTPUT_H_
#define INC_OUTPUT_H_

#include <common_include.h>

typedef struct {
	GPIO_TypeDef* port;
	uint16_t      pin;
	bool          state;
} Output;

void turn_on(Output*);
void turn_off(Output*);
void toggle(Output*);

#endif /* INC_OUTPUT_H_ */
