#ifndef INC_INPUT_H_
#define INC_INPUT_H_

#include <common_include.h>

typedef enum {
	NOMAL_OPEN,
	NOMAL_CLOSE
} InputType;

typedef struct {
	GPIO_TypeDef* port;
	uint16_t      pin;
	InputType     type;
	bool          last_state;
	bool          state;
} Input;

void update(Input*);
bool is_held(Input*);
bool is_pressed(Input*);
bool is_released(Input*);

#endif /* INC_INPUT_H_ */
