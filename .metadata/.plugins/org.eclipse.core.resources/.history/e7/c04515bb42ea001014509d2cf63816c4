#ifndef SRC_TIMER_C_
#define SRC_TIMER_C_

#include <timer.h>

static uint32_t current_time;
static uint32_t lap_time[8];
static uint8_t  total_lap_count;

void increase_time(void)
{
	time++;
}

void set_time_zero(void)
{
	time = 0;
}

uint32_t get_time(TimeIndex index)
{
	switch (index)
	{
	case TIME_MS:
		return (time / 1) % 1000;
	case TIME_100MS:
		return (time / 100) % 10;
	case TIME_SEC:
		return (time / 1000) % 60;
	case TIME_MIN:
		return (time / 1000 / 60) % 60;
	case TIME_HOUR:
		return (time / 1000 / 60 / 60) % 100;
	default:
		return 0;
	}
}

void set_lap_time(void)
{
	lap_time[total_lap_count++] = time;
}

uint32_t get_lap_time(uint8_t index)
{
	return lap_time[index];
}

#endif /* SRC_TIMER_C_ */
