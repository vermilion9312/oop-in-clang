#ifndef INC_INPUT_H_
#define INC_INPUT_H_

#include <common_include.h>

typedef enum {
	LEFT_RED,
	LEFT_GREEN,
	LEFT_BLUE,

	RIGHT_RED,
	RIGHT_GREEN,
	RIGHT_BLUE,

	MAX_LED
} LedType;

typedef struct {
	GPIO_TypeDef* port;
	uint16_t      pin;
	bool          last_state;
	bool          state;
} InputConfig;

#endif /* INC_INPUT_H_ */
