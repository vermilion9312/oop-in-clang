#ifndef INC_TIMER_H_
#define INC_TIMER_H_

#include <common_include.h>

typedef enum {
    TIME_MS,
    TIME_100MS,
    TIME_SEC,
    TIME_MIN,
    TIME_HOUR,

    TIME_INDEX_MAX
} TimeIndex;

void increase_time(void);
void set_time_zero(void);
uint32_t get_time(TimeIndex);
void set_lap_time(void);
uint32_t get_lap_time(uint8_t);

#endif /* INC_TIMER_H_ */
