#ifndef INC_OUTPUT_H_
#define INC_OUTPUT_H_

#include <common_include.h>

typedef enum {
	ACTIVE_HIGH,
	ACTIVE_LOW
} OutputType;

typedef struct {
	GPIO_TypeDef* port;
	uint16_t      pin;
	OutputType    type;
	bool          state;
} Output;

void turn_output_on(Output*);
void turn_output_off(Output*);
void toggle_output(Output*);

#endif /* INC_OUTPUT_H_ */
