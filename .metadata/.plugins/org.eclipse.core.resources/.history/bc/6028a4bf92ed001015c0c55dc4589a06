#include <input.h>

void update(Input* this)
{
	this->last_state = config->state;
	this->state = HAL_GPIO_ReadPin(this->port, this->pin);
}

bool is_held(Input* this)
{
	return this->state;
}

bool is_pressed(Input* this)
{
	return !this->last_state && this->state;
}

bool is_released(Input* this)
{
	return this->last_state && !this->state;
}
