#ifndef INC_INPUT_H_
#define INC_INPUT_H_

#include <common_include.h>

typedef enum {
	BUTTON_1,
	BUTTON_2,
	BUTTON_3,
	BUTTON_4,
	MAX_BUTTON
} InputIndex;

typedef struct {
	GPIO_TypeDef* port;
	uint16_t      pin;
	bool          last_state;
	bool          state;
} InputConfig;

void update_input(InputIndex index);
bool is_held(InputIndex index);
bool is_pressed(InputIndex index);
bool is_released(InputIndex index);

#endif /* INC_INPUT_H_ */
