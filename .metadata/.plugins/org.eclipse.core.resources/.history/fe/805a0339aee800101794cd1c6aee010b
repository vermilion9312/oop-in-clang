#ifndef INC_CLOCK_H_
#define INC_CLOCK_H_

#include <common_include.h>
#include <input.h>

typedef enum {
	MODE_CLOCK,
	MODE_TIMER,
	MODE_STOPWATCH,
	MODE_ALARM,
	MODE_MUSIC_PLAYER
} Mode;

typedef enum {
	STATE_STOPPED,
	STATE_PAUSED,
	STATE_RUNNING
} State;
#endif /* INC_CLOCK_H_ */
