#ifndef INC_OUTPUT_H_
#define INC_OUTPUT_H_

#include "../../App/Inc/common_include.h"

typedef enum {
	LEFT_RED,
	LEFT_GREEN,
	LEFT_BLUE,

	RIGHT_RED,
	RIGHT_GREEN,
	RIGHT_BLUE,

	MAX_OUTPUT
} OutputIndex;

typedef struct {
	GPIO_TypeDef* port;
	uint16_t      pin;
	bool          state;
} OutputConfig;

void turn_on(OutputIndex);
void turn_off(OutputIndex);
void toggle(OutputIndex);

#endif /* INC_OUTPUT_H_ */
